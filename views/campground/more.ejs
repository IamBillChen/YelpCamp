<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info1</li>
				<li class="list-group-item">Info2</li>
				<li class="list-group-item">Info3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail" style="padding: 0">
				<img class="img-responsive" src="<%= ground.img %>">
				<div class="caption-full">
					<h4 class="pull-right">$10.00/night</h4>
					<h3><%= ground.author.username %></h3>	
					<p><%= ground.description %></p>
					<% if(user && ground.author.id.equals(user.id)){ %>
					<form action="<%= ground.id %>/edit">
						<button>Edit</button>
					</form>
					<form action="<%= ground.id %>?_method=DELETE" method="POST">
						<button>Delete</button>
					</form>
					<% } %>
				</div>
			</div>

			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/ground/<%= ground.id %>/comment/new">Get a new comment</a>
				</div>
				<% ground.comments.forEach(function(com){ %>
					<hr>
					<div class="row">
						<div class="col-md-12">
							<span class="pull-right"> 10 days ago</span>
							<p><strong><%= com.author.username %></strong></p>
							<p>
								<%= com.content %> 
								<% if(user && com.author.id.equals(user.id)){ %>
									<a class="btn btn-warning" href="/ground/<%= ground.id %>/comment/<%= com.id %>">edit</a>
									<form action="/ground/<%= ground.id %>/comment/<%= com.id %>?_method=DELETE" method="POST">
										<button class="btn btn-warning">delete</button>  
									</form>
								<% } %>
							</p>
						</div>
					</div>
				<% }) %>		
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>

